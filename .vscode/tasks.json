{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++11",
				"-g",
				"${file}",
				"-o",
				"output/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++"
		},
		{
			"type": "shell",
			"label": "C/C++: clang++ execute active file",
			"command": "output/${fileBasenameNoExtension}",
			"args": [],
			"problemMatcher": []
		}
	]
}